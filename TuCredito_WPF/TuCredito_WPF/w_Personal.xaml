            <Button x:Name="btnAgregar" Content="Agregar" Click="BtnAgregar_Click" Canvas.Left="109" Canvas.Top="296" Width="89"/>
            <Button x:Name="btnModificar" Content="Modificar" Click="BtnModificar_Click" Canvas.Left="292" Canvas.Top="296" Width="94"/>
