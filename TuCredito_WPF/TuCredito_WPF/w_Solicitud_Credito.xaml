            <DataGrid x:Name="dgSolicitudCredito" Height="317" MouseDoubleClick="dgSolicitudCredito_MouseDoubleClick"  Margin="0,10,-2,0" VerticalAlignment="Top"/>
        </GroupBox>
        <CheckBox x:Name="chkAprobado" Content="Aprobado" Canvas.Left="46" Canvas.Top="368"/>
        <CheckBox x:Name="chkInformconf" Content="Informconf" Canvas.Left="46" Canvas.Top="348"/>

        <Button x:Name="btnActualizar" Content="Actualizar" Click="btnActualizar_Click" Canvas.Left="452" Canvas.Top="360" Width="107"/>

    </Canvas>
</Window>
